<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/img_main_bg">

        <ImageView
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/bt_menu_normal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/im_home_robot_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launch_title"
            app:layout_constraintLeft_toRightOf="@+id/btn_menu"
            app:layout_constraintTop_toBottomOf="@+id/btn_menu" />

        <ImageView
            android:id="@+id/im_home_robot_logo"
            android:layout_width="wrap_content"
            android:layout_height="190dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/img_launch_robot"
            app:layout_constraintLeft_toRightOf="@+id/btn_menu"
            app:layout_constraintTop_toBottomOf="@+id/im_home_robot_title" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/record_recyclerView"
            android:layout_width="320dp"
            android:layout_height="120dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/im_home_robot_logo" />

        <com.fitgreat.airfacerobot.launcher.widget.WaveView
            android:id="@+id/voice_anim"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            app:amplitude="0.6"
            app:amplitudeFactor="0.5"
            app:autoStart="false"
            app:layout_constraintLeft_toRightOf="@+id/btn_menu"
            app:layout_constraintTop_toBottomOf="@+id/record_recyclerView"
            app:speed="0.08"
            app:standByAmplitude="0.2"
            tools:ignore="MissingConstraints" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_signal"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/square_back_blue"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/im_home_robot_title"
            app:layout_constraintRight_toLeftOf="@+id/constraintLayout_battery"
            app:layout_constraintTop_toBottomOf="@+id/btn_menu">

            <ImageView
                android:id="@+id/ic_signal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/home_signal"
                app:layout_constraintBottom_toTopOf="@+id/signal_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/signal_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/ic_signal"
                android:textColor="#ffff"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ic_signal" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_battery"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/square_back_blue"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/constraintLayout_signal"
            app:layout_constraintRight_toLeftOf="@+id/constraintLayout_wear_equipment"
            app:layout_constraintTop_toBottomOf="@+id/btn_menu">

            <ImageView
                android:id="@+id/battery_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_home_battery_list"
                app:layout_constraintBottom_toTopOf="@+id/tv_battery"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/tv_battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/battery_60"
                android:textColor="#ffff"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/battery_img" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_wear_equipment"
            android:layout_width="0dp"
            android:layout_height="240dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/square_back_blue"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintLeft_toRightOf="@+id/constraintLayout_battery"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_menu">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/wear_equipment_begin_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="50dp" />

            <ImageView
                android:id="@+id/wear_equipment_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_wear_equipment"
                app:layout_constraintBottom_toTopOf="@+id/wear_equipment_begin_line"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/wear_equipment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="@string/wear_equipment"
                android:textColor="#ffff"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/wear_equipment_begin_line"
                app:layout_constraintLeft_toRightOf="@+id/wear_equipment_img"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/home_bluetooth_linked_devices_layout"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/power_mode_layout_bg"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/wear_equipment_begin_line"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="连接"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/bt_connect_arrow" />
            </LinearLayout>

            <View
                android:id="@+id/equipment_spacer"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="#3B6591"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_bluetooth_linked_devices_layout" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/bluetooth_device_begin_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="130dp" />

            <ImageView
                android:id="@+id/image_bluetooth_device"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_home_bluetooth"
                app:layout_constraintBottom_toTopOf="@+id/bluetooth_device_begin_line"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/equipment_spacer" />

            <TextView
                android:id="@+id/title_bluetooth_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxWidth="150dp"
                android:maxLines="1"
                android:text="@string/bluetooth_connection_device"
                android:textColor="#fff"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/bluetooth_device_begin_line"
                app:layout_constraintLeft_toRightOf="@+id/image_bluetooth_device"
                app:layout_constraintTop_toBottomOf="@+id/equipment_spacer" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/bluetooth_device_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_bluetooth_device" />

            <ImageView
                android:id="@+id/no_bluetooth_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_bluetooth_noconnected"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_bluetooth_device" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_robot"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/square_back_blue"
            android:paddingTop="10dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/im_home_robot_title"
            app:layout_constraintRight_toLeftOf="@+id/constraintLayout_wear_equipment"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout_signal">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_robot_begin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="45dp" />

            <TextView
                android:id="@+id/robot_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:ellipsize="end"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="机器人**号"
                android:textColor="#ffff"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/guideline_robot_begin"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/image_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_home_location"
                app:layout_constraintBottom_toTopOf="@+id/guideline_robot_begin"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/robot_hospital"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/location"
                android:textColor="#ffff"
                android:textIsSelectable="true"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/robot_name" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_mode_switch"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/square_back_blue"
            android:visibility="gone"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/im_home_robot_title"
            app:layout_constraintRight_toLeftOf="@+id/constraintLayout_auto_recharge"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout_wear_equipment">

            <LinearLayout
                android:id="@+id/home_power_mode_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/power_mode_layout_bg"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/power_mode_txt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed">

                <ImageView
                    android:id="@+id/home_control_mode_image"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/home_power_mode_bg"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/home_control_mode_src" />

                <ImageView
                    android:id="@+id/home_move_mode_image"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/home_power_mode_bg"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/home_move_mode_src" />
            </LinearLayout>

            <TextView
                android:id="@+id/power_mode_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/drag_mode"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_power_mode_layout" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_auto_recharge"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/square_back_blue"
            android:visibility="gone"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/constraintLayout_mode_switch"
            app:layout_constraintRight_toLeftOf="@+id/constraintLayout_auto_mission"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout_wear_equipment">

            <LinearLayout
                android:id="@+id/auto_recharge_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/power_mode_layout_bg"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/auto_recharge_txt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/home_power_mode_bg"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_auto_recharge" />
            </LinearLayout>

            <TextView
                android:id="@+id/auto_recharge_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/auto_recharge"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/auto_recharge_layout" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_auto_mission"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/square_back_blue"
            android:visibility="gone"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/constraintLayout_auto_recharge"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout_wear_equipment">

            <LinearLayout
                android:id="@+id/auto_mission_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/power_mode_layout_bg"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/auto_mission_txt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed">

                <ImageView
                    android:id="@+id/auto_mission_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/home_power_mode_bg"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_auto_mission" />
            </LinearLayout>

            <TextView
                android:id="@+id/auto_mission_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/auto_mission"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/auto_mission_layout" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.fitgreat.airfacerobot.launcher.widget.VolumeBrightView
            android:id="@+id/volume_bright_view"
            android:layout_width="100dp"
            android:layout_height="200dp"
            app:layout_constraintLeft_toRightOf="@+id/btn_menu"
            app:layout_constraintTop_toBottomOf="@+id/im_home_robot_logo" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/without_recharge_mode_switch"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/square_back_blue"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintLeft_toRightOf="@+id/im_home_robot_title"
            app:layout_constraintRight_toLeftOf="@+id/without_recharge_auto_mission"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout_wear_equipment">

            <LinearLayout
                android:id="@+id/without_recharge_home_power_mode_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/power_mode_layout_bg"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/without_recharge_power_mode_txt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed">

                <ImageView
                    android:id="@+id/without_recharge_home_control_mode_image"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/home_power_mode_bg"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/home_control_mode_src" />

                <ImageView
                    android:id="@+id/without_recharge_home_move_mode_image"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/home_power_mode_bg"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/home_move_mode_src" />
            </LinearLayout>

            <TextView
                android:id="@+id/without_recharge_power_mode_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/drag_mode"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/without_recharge_home_power_mode_layout" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/without_recharge_auto_mission"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/square_back_blue"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/without_recharge_mode_switch"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout_wear_equipment">

            <LinearLayout
                android:id="@+id/without_recharge_auto_mission_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/power_mode_layout_bg"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/without_recharge_auto_mission_txt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed">

                <ImageView
                    android:id="@+id/without_recharge_auto_mission_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/home_power_mode_bg"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_auto_mission" />
            </LinearLayout>

            <TextView
