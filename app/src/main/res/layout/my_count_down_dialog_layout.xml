<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px160"
    android:background="@android:color/white"
    android:padding="@dimen/px10"
    tools:ignore="MissingConstraints">

    <TextView
        android:id="@+id/my_count_down_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px10"
        android:gravity="center"
        android:text="标题"
        android:textColor="#FF111111"
        android:textSize="@dimen/textSize15"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/my_count_down_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px10"
        android:layout_marginTop="@dimen/px20"
        android:ellipsize="end"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:maxLines="3"
        android:text="内容"
        android:textColor="#FF111111"
        android:textSize="@dimen/textSize14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_count_down_dialog_title" />

    <RadioGroup
        android:id="@+id/my_count_down_dialog_radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px15"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <RadioButton
            android:id="@+id/my_count_down_dialog_yes"
            android:layout_width="@dimen/px120"
            android:layout_height="@dimen/px33"
            android:background="@drawable/round_gray_line"
            android:button="@null"
            android:gravity="center"
            android:text="@string/answer_yes"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textSize14" />

        <RadioButton
            android:id="@+id/my_count_down_dialog_no"
            android:layout_width="@dimen/px120"
            android:layout_height="@dimen/px33"
            android:layout_marginLeft="@dimen/px25"
            android:background="@drawable/sign_bt_back"
            android:button="@null"
            android:gravity="center"
            android:text="@string/answer_no"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize14" />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>