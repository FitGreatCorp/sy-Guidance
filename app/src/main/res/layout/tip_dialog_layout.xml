<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/px380"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    tools:ignore="MissingConstraints">

    <TextView
        android:id="@+id/tip_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px20"
        android:gravity="center"
        android:text="标题"
        android:textColor="#FF111111"
        android:textSize="@dimen/textSize16"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tip_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px30"
        android:ellipsize="end"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:maxLines="3"
        android:padding="@dimen/px10"
        android:text="内容"
        android:textColor="#FF111111"
        android:textSize="@dimen/textSize14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tip_dialog_title" />

    <RadioGroup
        android:id="@+id/tip_chose_radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px40"
        android:layout_marginBottom="@dimen/px20"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tip_dialog_content">

        <RadioButton
            android:id="@+id/tip_chose_yes"
            android:layout_width="@dimen/px150"
            android:layout_height="@dimen/px38"
            android:background="#469AD0"
            android:button="@null"
            android:gravity="center"
            android:text="@string/answer_yes"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize15" />

        <RadioButton
            android:id="@+id/tip_chose_no"
            android:layout_width="@dimen/px150"
            android:layout_height="@dimen/px38"
            android:layout_marginLeft="@dimen/px25"
            android:background="#469AD0"
            android:button="@null"
            android:gravity="center"
            android:text="@string/answer_no"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize15" />
    </RadioGroup>

    <Button
        android:id="@+id/single_operation_chose"
        android:layout_width="@dimen/px150"
        android:layout_height="@dimen/px38"
        android:layout_marginTop="@dimen/px40"
        android:layout_marginBottom="@dimen/px20"
        android:background="#469AD0"
        android:button="@null"
        android:gravity="center"
        android:text="@string/answer_no"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tip_dialog_content" />
</androidx.constraintlayout.widget.ConstraintLayout>