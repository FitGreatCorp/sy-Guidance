<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/validation_prompt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px30"
        android:text="@string/prompt_password_title"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/validation_prompt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/frame_gray_all_white"
        android:hint="@string/prompt_enter_password"
        android:maxLines="1"
        android:padding="15dp"
        android:inputType="numberPassword"
        android:textColor="@color/color_666666"
        android:textSize="15sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/validation_fail_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:maxLines="1"
        android:padding="2dp"
        android:text="@string/prompt_password_wrong"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <Button
        android:id="@+id/validation_prompt_bt"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/power_mode_layout_bg"
        android:text="@string/sure_bt_text"
        android:textColor="@android:color/white"
        android:textSize="15sp" />
</LinearLayout>