<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/validation_prompt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="请输入密码:"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/validation_prompt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/frame_gray_all_white"
        android:hint="请输入机器人登录密码"
        android:maxLines="1"
        android:padding="15dp"
        android:textColor="@color/color_666666"
        android:textSize="15sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/validation_fail_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:maxLines="1"
        android:padding="2dp"
        android:text="验证失败,请确认密码后重试,如需帮助请联系客服: 021-54281566"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <Button
        android:id="@+id/validation_prompt_bt"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/power_mode_layout_bg"
        android:text="确认"
        android:textColor="@android:color/white"
        android:textSize="15sp" />
</LinearLayout>