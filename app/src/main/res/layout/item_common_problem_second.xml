<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    tools:ignore="MissingConstraints">

    <TextView
        android:id="@+id/item_common_problem_second_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginTop="@dimen/px10"
        android:layout_marginRight="@dimen/px30"
        android:background="#FFFFFF"
        android:gravity="center|left"
        android:lineSpacingExtra="@dimen/px10"
        android:padding="@dimen/px5"
        android:textColor="#333333"
        android:textSize="@dimen/textSize14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/bottom_second_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginTop="@dimen/px10"
        android:background="#DEDEDE"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_common_problem_second_answer" />
</androidx.constraintlayout.widget.ConstraintLayout>