<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_item_common_problem"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px53"
    android:background="#FFFFFF"
    tools:ignore="MissingConstraints">

    <TextView
        android:id="@+id/item_common_problem_first_title"
        android:layout_width="@dimen/px0"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginRight="@dimen/px20"
        android:gravity="center|left"
        android:lineSpacingExtra="@dimen/px10"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize15"
        android:textStyle="bold"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/item_common_problem_first_logo"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_common_problem_first_logo"
        android:layout_width="@dimen/px12"
        android:layout_height="@dimen/px12"
        android:layout_marginRight="@dimen/px15"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_triangle_down"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/item_common_problem_first_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/bottom_first_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:layout_marginLeft="@dimen/px30"
        android:background="#DEDEDE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>