<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:topTitle="http://schemas.android.com/apk/res-auto"
    android:id="@+id/text_introduction_constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.fitgreat.airfacerobot.launcher.widget.TopTitleView
        android:id="@+id/text_introduction_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        topTitle:titleName="新园区介绍" />

    <ScrollView
        android:id="@+id/scrollView_introduction_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px0"
        android:layout_weight="1">

        <TextView
            android:id="@+id/text_introduction_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/px25"
            android:paddingRight="@dimen/px25"
            android:paddingBottom="@dimen/px25" />
    </ScrollView>
</LinearLayout>