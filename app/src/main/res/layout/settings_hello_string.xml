<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px50"
        android:layout_marginTop="@dimen/px10"
        android:gravity="center|left"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/px80"
            android:layout_height="wrap_content"
            android:text="自动迎宾:"
            android:textColor="@android:color/black" />

        <RadioGroup
            android:id="@+id/broadcast_greet_radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/broadcast_greet_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是" />

            <RadioButton
                android:id="@+id/broadcast_greet_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px30"
                android:text="否" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px20"
        android:gravity="center|left"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/px80"
            android:layout_height="wrap_content"
            android:text="迎宾语:"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/et_hello"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/free_operation_item_back"
            android:focusedByDefault="false"
            android:gravity="top|left"
            android:hint="请输入迎宾语"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px20"
        android:gravity="center|left"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/px80"
            android:layout_height="wrap_content"
            android:text="Welcome:"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/en_et_hello"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/free_operation_item_back"
            android:focusedByDefault="false"
            android:gravity="top|left"
            android:hint="Please enter welcome"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:textSize="14sp" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px20">

        <TextView
            android:id="@+id/free_operation_title"
            android:layout_width="@dimen/px80"
            android:layout_height="wrap_content"
            android:text="空闲操作:"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/free_operation"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/free_operation"
            android:layout_width="@dimen/px0"
            android:layout_height="@dimen/px49"
            android:background="@drawable/free_operation_item_back"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/free_operation_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/switch_free_operation_log"
            android:layout_width="@dimen/px12"
            android:layout_height="@dimen/px12"
            android:layout_marginRight="@dimen/px15"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_triangle_down"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px50"
        android:layout_marginTop="@dimen/px20"
        android:gravity="center|left"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/px80"
            android:layout_height="wrap_content"
            android:text="空闲操作:"
            android:textColor="@android:color/black"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_save"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px40"
            android:layout_marginRight="@dimen/px10"
            android:background="@drawable/power_mode_layout_bg"
            android:text="保存"
            android:textColor="#ffffff" />
    </LinearLayout>
</LinearLayout>