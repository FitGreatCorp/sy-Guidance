<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:topTitle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mediaplayer.PdfPlayActivity"
    tools:ignore="MissingConstraints">

    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/pdf_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.fitgreat.airfacerobot.launcher.widget.TopTitleView
        android:id="@+id/pdf_introduction_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        topTitle:titleColor="@color/black"
        topTitle:itemBackColor="@color/transparent"
        topTitle:titleName="新园区介绍" />

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="@dimen/px120"
        android:layout_height="@dimen/px36"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_gray_50"
        android:text="@string/end_play_video_bt"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>